{{> menu id="dashboard"}}

{{#each stations}}
<section class="ui segment">
  {{#if containsReadings}}
    {{> cards}}
  {{else}}
    {{> location-card}}
  {{/if}}
  <div class="ui grid">

    <div class="two column row">
      <div class="column">
        <a href="/station/{{id}}" class="ui icon button">
          <i class="folder open icon"></i> View readings
        </a>
      </div>

      <div class="right aligned column">
        <a href="/dashboard/delete-station/{{id}}" class="ui red icon button">
          <i class="trash icon"></i> Delete station
        </a>
      </div>

    </div>
  </div>
</section>
{{/each}}

{{> add-station}}
<div class="ui hidden divider"></div>