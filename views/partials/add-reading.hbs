<form class="ui stacked segment form" action="/station/{{station.id}}/add-reading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="Code" type="number" name="code">
    </div>
    <div class="field">
      <label>Temperature (C)</label>
      <input placeholder="Temperature" type="number" name="tempCelsius">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Speed" type="number" name="speed">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Direction code" type="number" name="direction">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="number" name="pressure">
    </div>
  </div>
  <button class="ui blue submit button"><i class="plus icon"></i>Add reading</button>
</form>