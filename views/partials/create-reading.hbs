<form class="ui stacked segment form" action="/station/{{station.id}}/create-reading" method="POST">
  <div class="five fields">
    <div class="required field">
      <label>Code</label>
      <input placeholder="Code" type="number" name="code">
    </div>
    <div class="required field">
      <label>Temperature (C)</label>
      <input placeholder="Temperature" type="number" name="tempCelsius">
    </div>
    <div class="required field">
      <label>Wind Speed</label>
      <input placeholder="Speed" type="number" name="speed">
    </div>
    <div class="required field">
      <label>Wind Direction</label>
      <input placeholder="Direction code" type="number" name="direction">
    </div>
    <div class="required field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="number" name="pressure">
    </div>
  </div>
  <button class="ui blue submit button"><i class="plus icon"></i>Create reading</button>
  <div class="ui error message"></div>
</form>

<script>
  $('.ui.form')
    .form({
      fields: {
        code: {
          identifier  : 'code',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter the weather code.'
            }
          ]
        },
        tempCelsius: {
          identifier  : 'tempCelsius',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter the temperature.'
            }
          ]
        },
        speed: {
          identifier  : 'speed',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter the wind speed.'
            }
          ]
        },
        direction: {
          identifier  : 'direction',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter the wind direction.'
            }
          ]
        },
        pressure: {
          identifier  : 'pressure',
          rules: [
            {
              type   : 'empty',
              prompt : 'Please enter the pressure.'
            }
          ]
        },
      }
    });
</script>