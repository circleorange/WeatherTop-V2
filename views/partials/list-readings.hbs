<table class="ui center aligned celled table">
  <thead>
    <tr>
      {{> reading-header}}
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>{{date}}</td>
        <td>{{code}}</td>
        <td>{{temperature}}</td>
        <td>{{windSpeed}}</td>
        <td>{{windDirection}}</td>
        <td>{{pressure}}</td>
        <td>
          <a href="/station/{{../station.id}}/delete-reading/{{id}}" class="ui red icon button">
            <i class="icon trash"></i>&nbsp; Delete
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>