<div id="map"></div>
<script>
  // map initialization
  var map = L.map('map').setView([53.3896, -7.7583], 7);
  // Open Street Map layer
  var osm = L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: 'Â© OpenStreetMap'
  });
  osm.addTo(map);
</script>

{{#each stations}}
  <script>
    var marker = L.marker([{{position.latitude}}, {{position.longitude}}])
      .addTo(map)
      .bindPopup(`{{name}} Station`);
  </script>
{{/each}}
